{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 28, "patch": 0 },
  "configurePresets": [
    {
      "name": "docs",
      "displayName": "Docs coverage (Ninja, tmp build)",
      "generator": "Ninja",
      "binaryDir": "/tmp/cmake-docs",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "Python3_EXECUTABLE": "/opt/venv/bin/python",
        "DOXYGEN_OUTPUT_DIR": "/workspace/DevOps/BuildArtifacts/DocsCoverage"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "docs",
      "configurePreset": "docs",
      "targets": ["docs"]
    }
  ]
}