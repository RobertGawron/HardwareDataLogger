{
  "version": 6,
  "configurePresets": [
    {
      "name": "stm32-release",
      "displayName": "STM32 Release (ARM GCC)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/stm32-release",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/gcc-arm-none-eabi.cmake",
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_IS_FOR_HARDWARE": "ON"
      }
    },
    {
      "name": "stm32-debug",
      "displayName": "STM32 Debug (ARM GCC)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/stm32-debug",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/gcc-arm-none-eabi.cmake",
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_IS_FOR_HARDWARE": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "build-release", "configurePreset": "stm32-release" },
    { "name": "build-debug",   "configurePreset": "stm32-debug" }
  ]
}