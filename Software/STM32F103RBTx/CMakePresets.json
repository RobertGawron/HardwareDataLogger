{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "stm32-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/gcc-arm-none-eabi.cmake",
        "BUILD_IS_FOR_HARDWARE": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "stm32-debug",
      "displayName": "STM32 Debug (ARM GCC + Ninja)",
      "inherits": "stm32-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "stm32-release",
      "displayName": "STM32 Release (ARM GCC + Ninja)",
      "inherits": "stm32-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-stm32-debug",
      "displayName": "Build STM32 (Debug)",
      "configurePreset": "stm32-debug"
    },
    {
      "name": "build-stm32-release",
      "displayName": "Build STM32 (Release)",
      "configurePreset": "stm32-release"
    }
  ]
}